<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#03A9F4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz">

    <!--True Button -->

    <!-- False Button -->
    <TextView
        android:id="@+id/questions_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:text="The Question"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/BtnTrue"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        android:text="True"
        android:textAlignment="center"
        android:textSize="20sp"
        android:backgroundTint="#712A25"
        app:layout_constraintEnd_toStartOf="@id/BtnTrue"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questions_textView" />

    <!-- Next Button -->

    <Button
        android:id="@+id/btnFalse"
        android:layout_width="123dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="32dp"
        android:text="False"
        android:backgroundTint="#712A25"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/btnFalse"
        app:layout_constraintTop_toBottomOf="@+id/questions_textView" />

    <Button
        android:id="@+id/Btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Next"
        android:textColor="@color/white"
        android:backgroundTint="#050000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnTrue" />

    <TextView
        android:id="@+id/feedback_text_View"
        android:layout_width="120dp"
        android:layout_height="66dp"
        android:layout_marginTop="120dp"
        android:text=""
        android:textSize="27dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnTrue" />


</androidx.constraintlayout.widget.ConstraintLayout>